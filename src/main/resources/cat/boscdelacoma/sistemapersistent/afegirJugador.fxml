<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane alignment="CENTER" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cat.boscdelacoma.sistemapersistent.controller.afegirJugador">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    <children>
        <Label text="ID" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <TextField fx:id="idField" GridPane.rowIndex="0" GridPane.columnIndex="1" />

        <Label text="Name" GridPane.rowIndex="1" GridPane.columnIndex="0" />
        <TextField fx:id="nameField" GridPane.rowIndex="1" GridPane.columnIndex="1" />

        <Label text="Age" GridPane.rowIndex="2" GridPane.columnIndex="0" />
        <TextField fx:id="ageField" GridPane.rowIndex="2" GridPane.columnIndex="1" />

        <Label text="Role" GridPane.rowIndex="3" GridPane.columnIndex="0" />
        <TextField fx:id="roleField" GridPane.rowIndex="3" GridPane.columnIndex="1" />

        <Label text="Kills" GridPane.rowIndex="4" GridPane.columnIndex="0" />
        <TextField fx:id="killsField" GridPane.rowIndex="4" GridPane.columnIndex="1" />

        <Label text="Assists" GridPane.rowIndex="5" GridPane.columnIndex="0" />
        <TextField fx:id="assistsField" GridPane.rowIndex="5" GridPane.columnIndex="1" />

        <Label text="Deaths" GridPane.rowIndex="6" GridPane.columnIndex="0" />
        <TextField fx:id="deathsField" GridPane.rowIndex="6" GridPane.columnIndex="1" />

        <Label text="Barons" GridPane.rowIndex="7" GridPane.columnIndex="0" />
        <TextField fx:id="baronsField" GridPane.rowIndex="7" GridPane.columnIndex="1" />

        <Button text="Add Player" onAction="#handleAddPlayer" GridPane.rowIndex="8" GridPane.columnIndex="1" />
    </children>
</GridPane>
